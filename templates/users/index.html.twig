{% extends '/base.html.twig' %}

{% block title %} Users {% endblock %}

{% block main %}
    <section>
        {{ form(searchForm) }}
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Phone number</th>
                <th>Buttons</th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.firstName }} {{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.role }}</td>
                    <td>{{ user.phoneNumber }}</td>
                    <td><a href={{ path('users_detail', {id: user.id}) }}>Detail</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if currentPage(app.request) > 1 %}
            <a href={{ path('users_index', prevPageParams(app.request)) }}>&lt;</a>
        {% endif %}
        {{ currentPage(app.request) }}
        {% set pageCnt = pagesCount(app.request, usersCount)  %}
        {% if currentPage(app.request) < pageCnt %}
            <a href={{ path('users_index', nextPageParams(app.request, pageCnt)) }}>&gt;</a>
        {% endif %}
    </section>
{% endblock %}
