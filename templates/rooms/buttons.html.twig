{% if is_granted('book_room', room) %}
    <a class="button-base button-with-icon button-main" href={{ path('reservations_book_room', {'roomId': room.id}) }}>
        {{ source('@icons/create-reservation-icon.svg') }}
        Request a reservation</a>
{% endif %}
{% if is_granted('edit_room', room) %}
    <a class="button-base button-with-icon button-main-outline" href={{ path('rooms_edit', {'id': room.id}) }}>
        {{ source('@icons/edit-icon.svg') }}
        Edit</a>
{% endif %}