{% extends 'base.html.twig' %}

{% block title %} Classroom edit form {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/form.css') }}" type="text/css">
{% endblock %}

{% block main %}
    <h1>Classroom edit form</h1>

    <article id="form">
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.building) }}
        {{ form_row(form.floor) }}
        {{ form_row(form.capacity) }}
        <h2>Opened</h2>
        {{ form_row(form.opened_from) }}
        {{ form_row(form.opened_to) }}
        <div id="form-buttons">
            {{ form_widget(form.delete) }}
            {{ form_widget(form.edit) }}
            {# TODO : add delete functionality #}
            <button type="button" id="room_delete" name="room[delete]" class="button-base button-danger-outline button-with-icon">
                <svg class="button-icon" width="1em" height="1em" aria-hidden="true" role="img" viewBox="120 120 800 800" xmlns="http://www.w3.org/2000/svg">
                    <path d="M864 256H736v-80c0-35.3-28.7-64-64-64H352c-35.3 0-64 28.7-64 64v80H160c-17.7 0-32 14.3-32 32v32c0 4.4 3.6 8 8 8h60.4l24.7 523c1.6 34.1 29.8 61 63.9 61h454c34.2 0 62.3-26.8 63.9-61l24.7-523H888c4.4 0 8-3.6 8-8v-32c0-17.7-14.3-32-32-32zm-200 0H360v-72h304v72z" fill="currentColor"/>
                </svg>
                Delete</button>
            <button type="submit" id="room_edit" name="room[edit]" class="button-base button-success button-with-icon">
                <svg class="button-icon" width="1em" height="1em" aria-hidden="true" role="img" viewBox="2 2 17 17" xmlns="http://www.w3.org/2000/svg">
                    <path d="M15.173 2H4c-1.101 0-2 .9-2 2v12c0 1.1.899 2 2 2h12c1.101 0 2-.9 2-2V5.127L15.173 2zM14 8c0 .549-.45 1-1 1H7c-.55 0-1-.451-1-1V3h8v5zm-1-4h-2v4h2V4z" fill="currentColor"/>
                </svg>
                Save</button>
        </div>
        {{ form_end(form) }}
    </article>
{% endblock %}