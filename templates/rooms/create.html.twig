{% extends 'base.html.twig' %}

{% block title %} Create classroom {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/form.css') }}" type="text/css">
{% endblock %}

{% block main %}
    <h1>Create classroom</h1>

    <article id="form">
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.building) }}
        {{ form_row(form.floor) }}
        {{ form_row(form.capacity) }}
        <h2>Opened</h2>
        {{ form_row(form.opened_from) }}
        {{ form_row(form.opened_to) }}
        {{ form_end(form) }}
    </article>
{% endblock %}