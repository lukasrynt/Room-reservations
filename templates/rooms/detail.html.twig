{% extends 'base.html.twig' %}

{% block title %} Classroom detail {% endblock %}

{% block main %}
    <section>
        <h1>{{ room.name }}</h1>
        <h2>Detail</h2>
        <dl>
            <dd>Building</dd>
            <dt>{{ room.building }}</dt>
            <dd>Floor</dd>
            <dt>{{ room.floor }}</dt>
            <dd>Capacity</dd>
            <dt>{{ room.capacity }}</dt>
            <dd>Opened from - to</dd>
            <dt>{{ room.opened_from }} - {{ room.opened_to }}</dt>
        </dl>
        {% if hasUserRequestPermission(user, room) %}
            <a href={{ path('users_book_room_member', {'user_id': user.id, 'room_id': room.id}) }}>Request a reservation</a>
        {% elseif hasUserRegistrationPermission(user, room) %}
            <a href={{ path('reservations_new', {'id': user.id}) }}>Make a reservation</a>
        {% endif %}
        <a href={{ path('rooms_edit', {'id': room.id}) }}>Edit</a>
    </section>
{% endblock %}