{% extends 'base.html.twig' %}

{% block title %} Building detail {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/detail.css') }}" type="text/css">
{% endblock %}

{% block main %}
    <article id="detail">
        <header>
            <h1>{{ building.name }}</h1>
        </header>
        <dl>
            <dd>ID</dd>
            <dt data-label="ID">{{ building.id }}</dt>
            <dd>Address</dd>
            <dt data-label="Address">{{ building.address }}</dt>
            <dd>Rooms</dd>
            <dt data-label="Rooms">
                <ul class="detail-list">
                    {% for room in building.rooms %}
                        {% if is_granted('view_room', room) %}
                            <li>
                                <a class="table-link" href="{{ path('rooms_detail', { id: room.id }) }}">{{ room.name }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </dt>
        </dl>
        <footer>
            {% include 'buildings/buttons.html.twig' %}
        </footer>
    </article>
{% endblock %}